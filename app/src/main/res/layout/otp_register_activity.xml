<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneEntryActivity">

    <TextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/description"
        android:layout_marginBottom="50dp"
        android:text="Enter OTP"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="32dp"
        android:textColor="#00283E" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="We have sent you an OTP\nfor phone number verification"
        android:layout_alignBottom="@id/otp"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/montserrat"/>

    <EditText
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/verifyButton"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:hint="Enter OTP here"
        android:padding="16dp"
        android:textSize="16dp"
        android:background="@drawable/round_border"
        android:inputType="phone" />


    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:padding="16dp"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/resend"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_button"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP?"
        android:textColor="#ED2929"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>